<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <div class="usa-grid-full" style="max-width:1250px">
    <nav class="sba-c-pagination" role="navigation">
      <div class="sba-c-pagination__backwards"> 
      <%= first_page_tag %>
      <%= prev_page_tag  %>
      </div>
      <div class='sba-c-pagination__numbers'>
      <div class="sba-c-pagination__status" aria-label= "Currently on page <%=current_page%> of  <%=total_pages%>" ><%= current_page%> of <%=total_pages%></div>
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <%= page_tag page %>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end -%>
      <% end -%>
      </div>
      <div class="sba-c-pagination__forwards">
        <%= next_page_tag %>
        <%= last_page_tag %>
      </div>
    </nav>
  </div>
<% end -%>
