<%= form_for voluntary_suspension, url: {action: "create" }, html: {multipart: true}, class: "nifty-form" do |f| %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <%= f.label :option, class: "input-group-text", for: "inputGroupSelect01" %>
    </div>
    <%= f.select :option, [ 'Covid-19' ], :prompt => 'Choose...', id: "inputGroupSelect01" %>
  </div>

  <% if voluntary_suspension.errors[:option].any? %>
    <div class="error"><%= voluntary_suspension.errors[:option].join(", ") %></div>
  <% end %>

  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <%= f.label :certificate, class: "input-group-text", for: "inputGroupSelect01" %>
    </div>
    <%= f.collection_select :certificate_id, current_organization.certificates.active, :id, :label, :prompt => 'Choose...', id: "inputGroupSelect01" %>

  </div>

  <% if voluntary_suspension.errors[:certificate].any? %>
    <div class="error"><%= voluntary_suspension.errors[:certificate].join(", ") %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, size: "2x6"  %>
  </div>

  <% if voluntary_suspension.errors[:title].any? %>
    <div class="error"><%= voluntary_suspension.errors[:title] %></div>
  <% end %>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-prepend">
        <%= f.label :body, class: "input-group-text" %>
      </div>
      <%= f.text_area :body, size: "24x6" %>
    </div>
  </div>

  <% if voluntary_suspension.errors[:body].any? %>
    <div class="error"><%= voluntary_suspension.errors[:body].join(", ") %></div>
  <% end %>

   <div class="form-group">
    <%= f.label :document  %>
    <%= f.file_field :document %>
   </div>

   <div class="form-group">
    <%= f.label :suspension_duration_months %>
    <%= f.select :suspension_duration_months, options_for_select(["3", "6", "9", "12"]) %>
   </div>

  <% if voluntary_suspension.errors[:document].any? %>
    <div class="error"><%= voluntary_suspension.errors[:document] %></div>
  <% end %>

  <%= f.submit "Submit", class: "btn btn-primpary btn-lg" %>

<% end %>

